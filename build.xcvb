(module
 (:fullname "xcvb"
  :author ("Francois-Rene Rideau" "Joyce Chen" "Spencer Brody")
  :maintainer "Francois-Rene Rideau"
  :licence "MIT" ;; MIT-style license. See LICENSE
  :description "XCVB"
  :long-description "an eXtensible Component Verifier and Builder for Lisp.
XCVB provides a scalable system to build large software in Lisp, featuring
deterministic separate compilation and enforced locally-declared dependencies."
  :build-depends-on ((:build "/asdf")
                     (:build "/cl-launch")
                     (:build "/asdf-dependency-grovel")
                     (:build "/closer-mop")
                     (:build "/command-line-arguments")
                     (:build "/fare-utils") ;; utilities and data structures.
                     (:when (:featurep :xcvb-farmer)
                       (:build "/iolib") ;; I/O event loop
                       (:build "/quux/iolib")) ;; signalfd support (experimental)
                     ;;(:when (:featurep :xcvb-crypto)
                     ;;  (:asdf :ironclad) ;; unported magic asdf:perform methods...
                     ;;  (:asdf :binascii))
                     "/xcvb/master"
                     (:when (:featurep :sbcl)
                       ;; Used by XCVB
                       (:require :sb-posix)
                       (:require :sb-sprof)
                       ;; make life easy for SLIME
                       (:require :sb-grovel)
                       (:require :sb-cltl2)
                       (:require :sb-introspect)
                       (:require :sb-bsd-sockets)))
  :depends-on ("driver"
               "conditions"
               "manifest"
               "grain-implementation"
               "grain-sets"
               "virtual-pathnames"
               "normalize-dependency"
               "driver-commands"
               "makefile-backend"
               "ne-makefile-backend"
               "asdf-converter"
               "asdf-backend"
               "list-files"
               "slave"
               "run-program-backend"
               (:when (:featurep :xcvb-farmer)
                 "farmer")
               "source-registry"
               "main"
               "version"
               "cffi-grovel-support")
  :supersedes-asdf ("xcvb" ("xcvb-driver" "driver") ("xcvb-master" "master"))
  :pre-image t
  :build-image t))
